<div class="max-w-md">
   <div class="text-5xl font-bold my-4">{{section.settings.title}}</div>
   <div class="text-base md:text-xl leading-normal">{{section.settings.subtext_title}}</div>
   <div class="my-4">
    <a href="{{shop.secure_url}}" class="px-4 inline py-2 text-base font-medium shadow bg-green-600 hover:bg-green-800 text-white">{{section.settings.button_label}}</a>
   </div>
</div>

{% schema %}
    {
        "name": "Template 404",
        "tag": "section",
        "class": "flex items-center justify-center text-center py-7 h-screen",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "default": "404",
                "label": "404 Heading Title"
            },
            {
                "type": "text",
                "id": "subtext_title",
                "default": "The page that you're looking for is not found",
                "label": "404 Subtext Title"
            },
            {
                "type": "text",
                "id": "button_label",
                "default": "Back to homepage",
                "label": "Button label"
            }
        ]
    }
{% endschema %}